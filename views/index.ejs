      e.preventDefault(); // Az alap√©rtelmezett ≈±rlapk√ºld√©st blokkoljuk
  
      const loading = document.querySelector('.loading');
      const errorMessage = document.querySelector('.error-message');
      const sentMessage = document.querySelector('.sent-message');
  
      // Visszajelz≈ë √ºzenetek alap√©rtelmezett √°llapota
      loading.style.display = 'block';
      errorMessage.style.display = 'none';
      sentMessage.style.display = 'none';
  
      // Az ≈±rlap adatok begy≈±jt√©se
      const formData = new FormData(this);
  
      // Fetch API seg√≠ts√©g√©vel elk√ºldj√ºk az adatokat
      fetch('/contact', {
        method: 'POST',
        headers: {
          'Accept': 'application/json', // JSON form√°tumot k√©r√ºnk
        },
        body: new URLSearchParams(formData), // Adatok form√°z√°sa
      })
        .then((response) => response.json())
        .then((data) => {
          loading.style.display = 'none'; // A "Kis t√ºrelmet" √ºzenet elt√ºntet√©se
          if (data.success) {
            // Ha sikeres, megjelen√≠tj√ºk a z√∂ld visszajelz√©st
            sentMessage.style.display = 'block';
            document.querySelector('.contact-form').reset(); // Az ≈±rlap mez≈ëk t√∂rl√©se
          } else {
            // Ha hiba t√∂rt√©nt, megjelen√≠tj√ºk a piros visszajelz√©st
            errorMessage.style.display = 'block';
            errorMessage.textContent = data.message; // Hiba√ºzenet megjelen√≠t√©se
          }
        })
        .catch((error) => {
          loading.style.display = 'none';
          errorMessage.style.display = 'block';
          errorMessage.textContent = 'Hiba t√∂rt√©nt a kapcsolat sor√°n!';
          console.error('Fetch hiba:', error);
        });
    });
  </script>
  

  <%- include("partials/footer") %>

</body>

</html>